<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, class: "rounder", placeholder: "monster_guy123" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", class: "rounder", placeholder: "example@email.com" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "rounder", placeholder: "enter a password..." %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounder", placeholder: "enter a password..." %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "rounder" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
